

<div class= "container py-5">
      <div class="row">
        <div class ="col-12 col-md-6 offset-lg-2">
          <div class = "bg-white rounded p-3 shadow">
          <h2>
            Book the Cafe
          </h2>
           <%= simple_form_for [@table, @booking] do |t|%>
          <%= t.input :day, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= t.input :start_time, as: :string, required: false, input_html: {class: "timepicker"} %>
          <%= t.input :end_time, as: :string, required: false, input_html: {class: "timepicker"} %>
          <div class="book-btn">
            <%= t.submit class: "btn btn-flat"%>
          </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
